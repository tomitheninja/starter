{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "root": true,
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/src/**/*",
      "**/.vscode/**/*",
      "**/index.html",
      "**/vite.config.js",
      "**/prisma/seed.ts",
      "!**/src/routeTree.gen.ts",
      "!**/src/components/ui/*.ts",
      "!**/src/_generated"
    ]
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "assist": { "actions": { "recommended": true } },
  "linter": {
    "domains": {
      "project": "recommended"
    },
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessStringConcat": "on"
      },
      "correctness": {
        "noUnusedFunctionParameters": {
          "level": "on",
          "fix": "safe",
          "options": {}
        }
      },
      "style": {
        "noNegationElse": "on",
        "noNonNullAssertion": "off",
        "noYodaExpression": "on",
        "useCollapsedElseIf": "on",
        "useFilenamingConvention": {
          "level": "on",
          "options": {
            "filenameCases": ["kebab-case"]
          }
        },
        "useBlockStatements": {
          "fix": "safe",
          "level": "on",
          "options": {}
        }
      },
      "suspicious": {
        "recommended": true,
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "trailingCommas": "es5",
      "quoteStyle": "single"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "overrides": [
    {
      "includes": ["./src/**/*.$*"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    },
    {
      "includes": ["./src/**/*.css"],
      "linter": {
        "rules": {
          "suspicious": {
            "noUnknownAtRules": "off"
          }
        }
      }
    }
  ]
}
